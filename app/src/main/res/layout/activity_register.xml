<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:orientation="vertical"
    tools:context=".LogIn">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="fitEnd"
        android:src="@drawable/logo_dh_mo_tphcm_ou__1_" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo_dh_mo_tphcm_ou_v" />

    <EditText
        android:id="@+id/edtMaGV"
        android:drawableStart="@drawable/baseline_person"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/input_custom"
        android:paddingLeft="10dp"
        android:textColorHint="@color/textColor"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="Nhập mã giảng viên"/>

    <EditText
        android:id="@+id/edtRegisterUserName"
        android:drawableStart="@drawable/baseline_person"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/input_custom"
        android:paddingLeft="10dp"
        android:textColorHint="@color/textColor"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="Nhập tài khoản"/>

    <EditText
        android:id="@+id/edtRegisterPassword"
        android:drawableStart="@drawable/baseline_lock"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/input_custom"
        android:paddingLeft="10dp"
        android:textColorHint="@color/textColor"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="Nhập mật khẩu"/>

    <EditText
        android:id="@+id/edtRegisterPasswordConfirm"
        android:drawableStart="@drawable/baseline_lock"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:drawablePadding="8dp"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/input_custom"
        android:paddingLeft="10dp"
        android:textColorHint="@color/textColor"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="Xác nhận mật khẩu" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_custom"
        android:text="Đăng ký"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnSwitchLogin"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-10dp"
        android:backgroundTint="@color/lightBlue"
        android:baselineAligned="false"
        android:text="Đăng nhập"
        android:textColor="@color/textLightBlue"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:textSize="10dp"/>

    <Button
        android:id="@+id/btnRegisterForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/lightBlue"
        android:text="Quên mật khẩu?"
        android:textColor="@color/textLightBlue"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:textSize="10dp"/>
</LinearLayout>